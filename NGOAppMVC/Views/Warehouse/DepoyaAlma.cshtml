@model DTOWarehouseAssets

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Depoya Alınacak Kayıt</h1>

<h4>WarehouseAssets</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Olustur">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DonationId" class="control-label"></label>
                <input asp-for="DonationId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImportedVolunteerId" class="control-label"></label>
                <select class="form-select form-control" asp-items="Model.VolunteerList" asp-for="ImportedVolunteerId"></select>
                <span asp-validation-for="ImportedVolunteerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImportDate" class="control-label"></label>
                <input asp-for="ImportDate" class="form-control" />
                <span asp-validation-for="ImportDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.Region" class="control-label"></label>
                <input asp-for="Donation.Region" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Depoya Al" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

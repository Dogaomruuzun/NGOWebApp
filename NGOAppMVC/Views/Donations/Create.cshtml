@model NGOAppMVC.DBModels.Donation
 @{
    ViewData["Title"] = "Create";
    List<SelectListItem> donableItemList = (List<SelectListItem>)ViewData["DonableItems"];
    List<SelectListItem> regionList = (List<SelectListItem>)ViewData["Regions"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NgouserId" class="control-label">@Context.User.Identity.Name</label>
            </div>
            <div class="form-group">
                <label asp-for="DonationDate" class="control-label"></label>
                <input type="date" asp-for="DonationDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                <span asp-validation-for="DonationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonableItemId" class="control-label"></label>
                <select class="form-select form-control" asp-items="donableItemList" asp-for="DonableItemId"></select>
                <span asp-validation-for="DonableItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonableItemAmount" class="control-label">Amount</label>
                <input asp-for="DonableItemAmount" class="form-control" />
                <span asp-validation-for="DonableItemAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class ="form-control" asp-items="regionList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

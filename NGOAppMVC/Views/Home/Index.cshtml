            <div class="card-header">
                <h3 class="card-title">
                    Statistics
                </h3>
            </div>
            <div class="card-body">
                <img src="~/images/ngo12.webp" style="width: -webkit-fill-available;" />
            </div>

        </div>
    </section>
    <!-- /.Left col -->

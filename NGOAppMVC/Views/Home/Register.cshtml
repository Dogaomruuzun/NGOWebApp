@using System.Text.Json
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title> Registration Page</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/adminlte/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/adminlte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/adminlte/dist/css/adminlte.min.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box" style="width: 1024px">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <img src="~/ngoicon.png" style="height: 150px;" />
                <br />
                <br />
                <a class="h5">Aid Operations Management System </a>
            </div>
            <p class="login-box-msg">Register a new membership</p>
            <form method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-body">
                    <div class="card card-primary">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span asp-validation-for="Age" class="text-danger"></span>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                        <span asp-validation-for="VolunteerRegionId" class="text-danger"></span>
                        <span asp-validation-for="VolunteerAvailableDaysCount" class="text-danger"></span>
                        <span asp-validation-for="VolunteerAvailableHoursCount" class="text-danger"></span>
                    </div>
                </div>
                @Html.HiddenFor(model => Model.Dependents)
                <div class="card-body">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">User Info</h3>
                        </div>
                        <div class="card-body">
                            <div class="row" style="margin-left: 5px; margin-top: 10px;">
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.FirstName" class="form-control" placeholder="First Name" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-user"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.LastName" class="form-control" placeholder="Last Name" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-user"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.Password" class="form-control" placeholder="Password" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.Email" class="form-control" placeholder="Email" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-envelope"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.Age" class="form-control" placeholder="Age" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-birthday-cake"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Retype password" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-lock"></span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Phone Number" aria-required="true" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-phone"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <div class="custom-control custom-radio" style="margin-right: 1rem;">
                                                <input type="radio" asp-for="@Model.Gender" value="true" /> Male<br />
                                            </div>
                                            <div class="custom-control custom-radio" style="margin-right: 1rem;">
                                                <input type="radio" asp-for="@Model.Gender" value="false" /> Female<br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card card-success">
                        <div class="card-header">
                            <div class="custom-control custom-checkbox" style="margin-right: 1rem;">
                                <input type="checkbox" asp-for="IAmaVolunteer"/>  I am a Volunteer
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row" style="margin-left: 5px; margin-top: 10px;">
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-fax"></span>
                                                </div>
                                            </div>
                                            <select class="form-select form-control" asp-items="Model.ProfessionList" asp-for="VolunteerProfessionId"></select>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.VolunteerAnnualIncome" type="number" class="form-control" placeholder="Annual Income" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-solid fa-money-bill"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-globe"></span>
                                                </div>
                                            </div>
                                            <select class="form-select form-control" asp-items="Model.GeographicalList" asp-for="VolunteerRegionId"></select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.VolunteerAvailableDaysCount" class="form-control" placeholder="Available days count in a month" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-regular fa-calendar-day"></span>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <input asp-for="@Model.VolunteerAvailableHoursCount" class="form-control" placeholder="Available hours count in a day" />
                                            <div class="input-group-append">
                                                <div class="input-group-text">
                                                    <span class="fas fa-hourglass-half"></span>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="row">
                                        <div class="input-group mb-3" style="margin-right: 1rem;">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <div class="custom-control custom-radio" style="margin-right: 1rem;">
                                                    <input type="radio" asp-for="@Model.VolunteerCanHandleOwnTransportation" value="true" /> I can handle my transportation<br />
                                                </div>
                                                <div class="custom-control custom-radio" style="margin-right: 1rem;">
                                                    <input type="radio" asp-for="@Model.VolunteerCanHandleOwnTransportation" value="false" /> I need help for transportation<br />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="card card-warning">
                        <div class="card-header">
                            <div class="custom-control custom-checkbox" style="margin-right: 1rem;">
                                <input type="checkbox" asp-for="IAmanIndigent" />  I am an Indigent 
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row" style="margin-left: 5px; margin-top: 10px;">
                                <div class="col-lg-4">
                                    <div class="input-group mb-3" style="margin-right: 1rem;">
                                        <input asp-for="@Model.IndigentMonthlyIncome" type="number" class="form-control" placeholder="Monthly Income" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-solid fa-money-bill"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group mb-3" style="margin-right: 1rem;">
                                        <input asp-for="@Model.IndigentMonthlyExpenditures" type="number" class="form-control" placeholder="Monthly Expenditure" />
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-solid fa-money-bill"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-left: 5px; margin-top: 10px;">
                                <div class="col-lg-4">
                                    <div class="input-group mb-3" style="margin-right: 1rem;">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-bell"></span>
                                            </div>
                                        </div>
                                        <select class="form-select form-control" asp-items="Model.DonableItemList" asp-for="IndigentDonableId"></select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="input-group mb-3" style="margin-right: 1rem;">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-bell"></span>
                                            </div>
                                        </div>
                                        <select class="form-select form-control" asp-items="Model.GeographicalList" asp-for="IndigentRegionId"></select>
                                    </div>
                                </div>
                            </div>
                            <div id="dependents" class="card card-warning">
                                <div class="card-header">
                                    <h3 class="card-title">Dependents</h3>
                                </div>
                                <div class="card-body">

                                    <div class="row" style="margin-left: 5px; margin-top: 10px;">
                                        <div class="col-lg-2">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <input asp-for="@Model.IndigentFirstName" class="form-control" placeholder="First Name" />
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-user"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-2">

                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <input asp-for="@Model.IndigentLastName" class="form-control" placeholder="Last Name" />
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-user"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-lg-2">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-award"></span>
                                                    </div>
                                                </div>
                                                <select class="form-select form-control" asp-items="Model.EducationList" asp-for="IndigentEducationId"></select>
                                            </div>
                                        </div>
                                        <div class="col-lg-2">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-heart"></span>
                                                    </div>
                                                </div>
                                                <select class="form-select form-control" asp-items="Model.RelationList" asp-for="IndigentRelationId"></select>
                                            </div>
                                        </div>
                                        <div class="col-lg-2">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <div class="input-group-append">
                                                    <div class="input-group-text">
                                                        <span class="fas fa-briefcase"></span>
                                                    </div>
                                                </div>
                                                <select class="form-select form-control" asp-items="Model.EmploymentStatusList" asp-for="IndigentEmploymentId"></select>
                                            </div>
                                        </div>
                                        <div class="col-lg-1">
                                            <div class="input-group mb-3" style="margin-right: 1rem;">
                                                <button type="submit" asp-controller="Home" asp-action="AddDependent" class="btn btn-primary btn-block">Add</button>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="row">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        First Name
                                                    </th>
                                                    <th>
                                                        Last Name
                                                    </th>
                                                    <th>
                                                        Education
                                                    </th>
                                                    <th>
                                                        Relation
                                                    </th>
                                                    <th>
                                                        Employment
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    var tempData = TempData["Dependents"];
                                                    if (tempData != null)
                                                    {
                                                        var dependents = JsonSerializer.Deserialize<List<DTOIndigentDependents>>(TempData["Dependents"].ToString());
                                                        if (dependents.Count > 0)
                                                        {
                                                            foreach (var item in dependents)
                                                            {
                                                                <tr>
                                                                    <td>
                                                                        <label>@item.FirstName</label>
                                                                    </td>
                                                                    <td>
                                                                        <label>@item.LastName </label>
                                                                    </td>
                                                                    <td>
                                                                        <label>@item.EducationStatusName </label>
                                                                    </td>
                                                                    <td>
                                                                        <label>@item.DependentRelationName </label>
                                                                    </td>
                                                                    <td>
                                                                        <label>@item.EmploymentStatusName </label>
                                                                    </td>
                                                                    <td>
                                                                        <a asp-action="Delete" asp-route-id="Dependents[i].Id">Delete</a>
                                                                    </td>
                                                                </tr>
                                                            }

                                                        }

                                                    }
                                                }
                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <!-- /.col -->
                            <div class="col-2">
                                <button id="register-submit" asp-controller="Home" asp-action="Register" type="submit" class="btn btn-primary btn-block">Register</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    </div>

                </div>

            </form>


            <a href="login.html" class="text-center">I already have a membership</a>

            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="~/adminlte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/adminlte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/adminlte/dist/js/adminlte.min.js"></script>
</body>
</html>

